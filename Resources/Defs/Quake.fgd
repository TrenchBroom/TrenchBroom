[
	targetname(target_source) : "Name" 
]

@PointClass base(Appearflags, Target, Targetname) = info_notnull : "Wildcard entity" // I love you
[
	use(string) : "self.use"
	think(string) : "self.think"
	nextthink(integer) : "nextthink"
	noise(string) : "noise"
